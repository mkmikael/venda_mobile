<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="blacksoftware.venda.activities.ClienteActivity" >

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="5">
        <EditText 
            android:id="@+id/filtroClientes"
            android:hint="Filtro"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"/>
	    <ListView
	        android:id="@+id/clientes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:scrollbarAlwaysDrawVerticalTrack="true"
	        android:scrollbars="vertical" >
	    </ListView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" >

        <TableLayout
            style="@style/AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Código"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/codigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Fantasia"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fantasia"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="CNPJ"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cnpj"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Rz. Social"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/razaoSocial"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Endereço"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/endereco"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Bairro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/bairro"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Ref."
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/referencia"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Cidade"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cidade"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Ins.Est. "
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/insEstadual"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Sit"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/situacao"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Limite"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/limite"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Telefone"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/telefone"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Contato"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/responsavel"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Ramo"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ramo"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Canal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/canal"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="Rate"
                    android:textSize="13sp" />

                <RatingBar
                    android:id="@+id/rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:isIndicator="false"
                    android:numStars="4"
                    android:stepSize="1.0" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>