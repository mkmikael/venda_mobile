<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="1"
    tools:context="blacksoftware.venda.activities.ClienteActivity" >

    <ListView
        android:id="@+id/clientes"
        android:layout_width="238dp"
        android:layout_height="fill_parent"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0" >
    </ListView>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_column="1"
        android:layout_gravity="top|left|right"
        android:layout_row="0"
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical" >

        <GridLayout
            style="@style/AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|top"
            android:layout_margin="0dp"
            android:layout_row="0"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="5dp"
            android:rowCount="11"
            android:useDefaultMargins="true" >

            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="0"
                android:text="Fantasia"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/fantasia"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:text="CNPJ"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/cnpj"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="2"
                android:text="Rz. Social"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/razaoSocial"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="3"
                android:text="EndereÃ§o"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
		
            <TextView
                android:id="@+id/endereco"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="3"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="4"
                android:text="Ins.Est. "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:id="@+id/insEstadual"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="5"
                android:text="Sit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/situacao"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="6"
                android:text="Limite"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/limite"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="6"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="7"
                android:text="Telefone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:id="@+id/telefone"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="7"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="8"
                android:text="Contato"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/responsavel"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="8"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="9"
                android:text="Ramo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/ramo"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="9"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
            
            <TextView
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="10"
                android:text="Canal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/canal"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal|top"
                android:layout_row="10"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="9sp" />
        </GridLayout>
    </ScrollView>

</GridLayout>