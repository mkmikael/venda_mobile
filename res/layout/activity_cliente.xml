<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="blacksoftware.venda.activities.ClienteActivity" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="6">

        <EditText
            android:id="@+id/filtroClientes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Filtro"
            android:inputType="textFilter" />

	    <ListView
	        android:id="@+id/clientes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:scrollbarAlwaysDrawVerticalTrack="true"
	        android:scrollbars="vertical" >
	    </ListView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" >

        <TableLayout
            style="@style/AppTheme"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="CODIGO"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/codigo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="NOME FANTASIA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/fantasia"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="CNPJ"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cnpj"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="RAZAO SOCIAL"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/razaoSocial"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="ENDERECO"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/endereco"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="BAIRRO"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/bairro"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="REFERENCIA"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/referencia"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="CIDADE"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cidade"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="INSC. ESTADUAL"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/insEstadual"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="SITUACAO"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/situacao"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="LIMITE"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/limite"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="TELEFONE"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/telefone"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="CONTATO"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/responsavel"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="RAMO"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ramo"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="CANAL"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/canal"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow android:paddingBottom="15sp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:text="RATE"
                    android:textSize="13sp" />

                <RatingBar
                    android:id="@+id/rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7.5"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="1.0" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>